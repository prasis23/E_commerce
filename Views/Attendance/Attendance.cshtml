<style>
    .button{
        background-color:green;
        color:white;
        border-color:green;
        margin-bottom:20px;
        margin-top:20px;
        display:inline-block;

    }
    thead {
        text-align: center;
        background-color: blue;
        color:white;
        font-weight:bold;
       
    }
    table{
        text-align:center;
        border-color:blue;
    }
    #head{
        text-align:center;
        font-weight:bold;

    }

</style>

<h1 style="text-align:center">Attendance Traker</h1>

<button onclick="CheckIn()"class=" button">@ViewBag.CheckInCheck</button>
<input id="attendanceId" value=@ViewBag.AttendanceId hidden=="hidden"/>

<table class="table">
    <thead>
        <tr>
            <th>Employee Name</th>
            <th>Check In Time</th>
            <th>Check Out Time</th>
        </tr>
    </thead>
    <tbody>
        @if (ViewBag.EmployeeShiftLogs != null)
        {
            foreach (var item in ViewBag.EmployeeShiftLogs)
            {
                <tr>
                    <td>@item.EmployeeName</td>
                    <td>@item.CheckInTime</td>
                    <td>@item.CheckOutTime</td>
                </tr>
            }
        }
    </tbody>

</table>
<script>
    function CheckIn(){
        var attendanceId = document.getElementById("attendanceId").value;
        window.location.href = "@Url.Action("CheckInEmployee","Attendance")" + "?attendanceId=" + attendanceId;
    }
</script>