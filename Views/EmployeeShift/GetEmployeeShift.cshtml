@{
}
@model List<EmployeeManagement.Models.EmployeeShift>
<table class="table">
    <thead>
        <tr>
            <th>EmployeeId</th>
            <th>CheckInTime</th>
            <th>CheckOutTime</th>
            <th>TotalDuration<th>
        </tr>
    </thead>
    <tbody>
        
            @foreach (EmployeeManagement.Models.EmployeeShift item 
            in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.StartTime)</td>
                    <td>@item.EndTime</td>
                    <td>@item.TotalTime</td>
                    <td><a href="GetEmployeeShiftById/@item.Id" class="btn btn-primary">View</a></td>
                    <td><a href="RemoveEmployeeShiftById/@item.Id" class="btn btn-danger">Remove</a></td>
                </tr>
            }               

    </tbody>
</table>
