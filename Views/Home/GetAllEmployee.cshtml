@{
}
@model List<EmployeeManagement.Models.Employee>

<table class="table">
    <thead>
        <tr>
            <th>S.no</th>
            <th>Employee Id</th>
            <th>Name</th>
            <th>Address</th>
            <th>Phone Number</th>
            <th>Birth Date</th>
            <th>Email</th>
            <th>Salary</th>
            <th>Department</th>
        </tr>
    </thead>
    <tbody>
        
        @if (Model != null && Model.Any())
        {
            @foreach (EmployeeManagement.Models.Employee item in Model)
            {
                int i = 0;
                i++;

                <tr>
                    <td>@i</td>
                    <td>@item.EmployeeId</td>
                    <td>@item.Name</td>
                    <td>@item.Address</td>
                    <td>@item.PhoneNumber</td>
                    <td>@item.BirthDate.ToString("dd/mm/yyyy")</td>
                    <td>@item.Email</td>
                    <td>@item.Salary</td>
                    <td>@item.Department.Name</td>
                    <td><a href="GetEmployeeById/@item.Id" class="btn btn-primary">View</a></td>
                    <td><a href="RemoveEmployeeById/@item.Id" class="btn btn-danger">Remove</a></td>

                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6">
                    <div>
                        No employees available at this moment!
                    </div>
                </td>
            </tr>
        }

    </tbody>
</table>

